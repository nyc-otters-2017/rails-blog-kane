<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %>:<br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>:<br>
    <%= f.text_area :description, cols: "50", rows: "20" %>
  </p>

  <p>
    <%= f.label :name %>:<br>
    <!-- # :input_html => { value: f ? value:'anonymousOtter' }  -->
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
